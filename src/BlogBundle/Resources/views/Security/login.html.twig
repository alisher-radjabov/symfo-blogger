{% extends 'BlogBundle::base.html.twig' %}

{% block body %}
    <h1>Login</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post" class="col-md-4">
        <fieldset>
            <div class="form-group">
                <label for="username">{{ 'Username' | trans }}</label><br/>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="password">{{ 'Password' | trans }}</label><br/>
                <input type="password" id="password" name="_password" class="form-control"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button type="submit" class="btn btn-primary">{{ 'Login' | trans }}</button>
        </fieldset>
    </form>
    <br/>
    <div class="alert alert-info">
        <b>Admin:</b><br/>
        <i>Login: admin</i><br/>
        <i>Password: admin</i>
    </div>
{% endblock %}
